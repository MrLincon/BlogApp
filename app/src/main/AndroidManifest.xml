<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.whitespace.blogapp">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Activity.EditPostActivity"
            android:parentActivityName=".Activity.MyPostActivity"></activity>
        <activity
            android:name=".Activity.MyPostActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.PostActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity android:name=".Activity.MainActivity"/>
        <activity android:name=".Authentication.PasswordRecoveryActivity"
            android:parentActivityName=".Authentication.LoginActivity"></activity>
        <activity android:name=".Authentication.SignupActivity"></activity>
        <activity android:name=".Authentication.ConfirmActivity"></activity>
        <activity android:name=".Authentication.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>